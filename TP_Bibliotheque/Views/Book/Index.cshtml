@model TP_Bibliotheque.Models.ViewModel.BookModelView

@{
    ViewBag.Title = "Liste des livres.";
}

<h1>Books' list</h1>

<ul>
    @foreach (var book in @Model.GetBooks())
    {
        <li>
            @book.Title [@book.Author.Name] (@book.AvailableQuantity)  @Html.ActionLink("More on this book", "Details", new { id = book.Id })  (TODO  edit / remove)
        </li>
    }

    @Html.ActionLink("Add Book", "Add");
</ul>