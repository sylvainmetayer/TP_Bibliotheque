@model TP_Bibliotheque.Models.ViewModel.ReservationModelView

@{
    ViewBag.Title = "Liste des reservations.";
}

Liste des réservations
<ul>
    @foreach (var resa in @Model.GetReservations())
    {
        <li>
            "@resa.user.Name @resa.user.Firstname" borrowed @resa.book.Title (By @resa.book.Author.Name - Edition: @resa.book.Edition) on @resa.beginDate. <br />

            @if (resa.isReturned)
            {
                <p>This book has been returned.</p>
            }
            else
            {
                <p>This book has not been returned yet. Limit date @resa.returnDate</p>
            }

            @if(resa.daysRetard > 0)
            {
                <p>This member should have returned this book since @resa.daysRetard days  </p>
            }

        </li>
    }

    @Html.ActionLink("Add Resa", "Add");
</ul>